<script>
function previewImage(input,id){
  const file=input.files[0];
  if(file){
    const reader=new FileReader();
    reader.onload=e=>document.getElementById(id).src=e.target.result;
    reader.readAsDataURL(file);
  }
}

/* Signatures */
const customerPad=new SignaturePad(document.getElementById("sigCustomer"));
const techPad=new SignaturePad(document.getElementById("sigTech"));
function clearSig(pad){pad.clear();}

/* Generate PDF and download (Edge-safe) */
async function generatePDF(shareMode=false){
  const { jsPDF }=window.jspdf;
  const pdf=new jsPDF("p","mm","a4");
  const pageHeight=pdf.internal.pageSize.getHeight();
  const pageWidth=pdf.internal.pageSize.getWidth();
  const now=new Date();
  const reportDate=now.toLocaleDateString();
  const timestamp=now.toLocaleString();
  let y=25,page=1;

  function footer(){
    pdf.setFontSize(10);
    pdf.text(`Page ${page}`,pageWidth-30,pageHeight-10);
  }
  function addText(label,value){
    pdf.setFontSize(12);
    pdf.text(`${label}: ${value||""}`,10,y);
    y+=8;
  }

  pdf.setFontSize(16);
  pdf.text("EV CARE â€“ Vehicle Inbound / Outbound Inspection",10,y);
  pdf.setFontSize(11);
  pdf.text(`Report Date: ${reportDate}`,pageWidth-70, y);
  y+=12;

  addText("Inspection Type",document.getElementById("type").value);
  addText("Customer Name",document.getElementById("custName").value);
  addText("Phone",document.getElementById("custPhone").value);
  addText("Vehicle",document.getElementById("vehicle").value);
  addText("Plate Number",document.getElementById("plate").value);
  y+=6;

  pdf.text("Notes / Additional Remarks:",10,y);
  y+=6;
  const notes=document.getElementById("notes").value||"-";
  const splitNotes=pdf.splitTextToSize(notes,180);
  pdf.text(splitNotes,10,y);
  y+=splitNotes.length*6+8;
  if(y>pageHeight-50){footer();pdf.addPage();y=20;page++;}

  const key=document.getElementById("keyReceived").checked?"Yes":"No";
  const reg=document.getElementById("regReceived").checked?"Yes":"No";
  addText("Key Received",key);
  addText("Registration Card Received",reg);
  y+=10;

  const imageIds=["frontImg","rearImg","leftImg","rightImg","extra1","extra2","extra3","extra4"];
  for(let id of imageIds){
    const img=document.getElementById(id);
    if(img && img.src && img.src.startsWith("data:image")){
      if(y>pageHeight-70){footer();pdf.addPage();y=20;page++;}
      pdf.text(id.replace("Img","").toUpperCase(),10,y);
      y+=4;
      pdf.addImage(img.src,"JPEG",10,y,90,60);
      y+=65;
    }
  }

  if(y>pageHeight-70){footer();pdf.addPage();y=20;page++;}
  pdf.text("Customer Signature:",10,y);
  y+=4;
  if(!customerPad.isEmpty()) pdf.addImage(customerPad.toDataURL(),"PNG",10,y,60,30);
  y+=35;
  pdf.text(`Name: ${document.getElementById("custSigName").value||""}`,10,y);
  y+=6;
  pdf.text(`Timestamp: ${timestamp}`,10,y);
  y+=12;

  if(y>pageHeight-60){footer();pdf.addPage();y=20;page++;}
  pdf.text("EV CARE Technician Signature:",10,y);
  y+=4;
  if(!techPad.isEmpty()) pdf.addImage(techPad.toDataURL(),"PNG",10,y,60,30);
  y+=35;
  pdf.text(`Name: ${document.getElementById("techSigName").value||""}`,10,y);
  y+=6;
  pdf.text(`Timestamp: ${timestamp}`,10,y);

  footer();

  const custName=document.getElementById("custName").value.replace(/\s+/g,"_")||"Customer";
  const plate=document.getElementById("plate").value.replace(/\s+/g,"_")||"NoPlate";
  const fileName=`EVCARE_${plate}_${custName}.pdf`;

  /* Blob save (Edge-safe) */
  const pdfBlob=pdf.output("blob");
  const blobUrl=URL.createObjectURL(pdfBlob);

  if(shareMode && navigator.share){
    const file=new File([pdfBlob],fileName,{type:"application/pdf"});
    try{
      await navigator.share({
        title:"EV CARE Inspection Report",
        text:"Vehicle inspection report attached.",
        files:[file]
      });
    }catch(err){console.error(err);}
  }else{
    const a=document.createElement("a");
    a.href=blobUrl;
    a.download=fileName;
    a.click();
    URL.revokeObjectURL(blobUrl);
    alert("âœ… PDF generated successfully as "+fileName);
  }
}

/* Share via WhatsApp / native share */
function sharePDF(){generatePDF(true);}
</script>
